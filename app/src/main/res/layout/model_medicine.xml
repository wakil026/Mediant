<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:andoidx.cardview="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button"
        >

        <TextView
            android:id="@+id/medicineBrandName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Brand"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/medicineType"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/medicineBrandName"
            android:text="Type"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/medicineContains"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/medicineBrandName"
            android:text="Contains"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/companyName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/medicineGenericName"
            android:textColor="#056608"
            android:text="Company"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/medicineGenericName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Generic"
            android:layout_below="@+id/medicineContains"
            android:textSize="18sp" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>