<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:context=".ReminderDetailsActivity">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
    <EditText
        android:id="@+id/nameId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="20dp"
        android:hint="Medicine Name"/>

    <EditText
        android:id="@+id/detailsId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/nameId"
        android:textSize="15dp"
        android:hint="Details"/>

    <Button
        android:id="@+id/addTimeButtonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/detailsId"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Add Time" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/timeListId"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/addTimeButtonId"
        android:layout_marginTop="10dp"
        android:background="#f2f4f2"/>

    <Button
        android:id="@+id/saveButtonId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timeListId"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:text="Save" />

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>