<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateEmailActivity">


    <EditText
        android:id="@+id/updatedEmailId"
        android:layout_width="320dp"
        android:layout_height="57dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="185dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="489dp"
        android:ems="10"
        android:hint="Enter new email address"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/updatedReEmailId"
        android:layout_width="318dp"
        android:layout_height="63dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="264dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="404dp"
        android:ems="10"
        android:hint="Re-enter your new email address"
        android:inputType="textEmailAddress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/changeEmailId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="143dp"
        android:layout_marginTop="351dp"
        android:layout_marginEnd="144dp"
        android:layout_marginBottom="332dp"
        android:text="Change Email"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>